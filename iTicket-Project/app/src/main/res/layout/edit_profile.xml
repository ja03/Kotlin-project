<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePage">
    <TextView android:id="@+id/pr_hd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        android:textSize="18dp"
        android:textColor="@color/black" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/pr_hd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="24dp"
        android:layout_marginLeft="24dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:baselineAligned="true"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="240dp"
                android:layout_height="28dp"
                android:text="Profile Information"
                android:textSize="18dp"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/save_information"
                android:background="@color/white"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Save information"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:layout_width="372dp"
                android:layout_height="43dp"
                android:hint="Ahmad Mahmoud"
                android:gravity="top"
                android:paddingTop="12dp"
                android:paddingLeft="18dp"
                android:textSize="16dp"
                android:background="@drawable/learn_more_border"
                android:layout_marginTop="16dp"/>
            <EditText
                android:layout_width="372dp"
                android:layout_height="43dp"
                android:hint="ahmadmahmoud@gmail.com"
                android:gravity="top"
                android:paddingTop="12dp"
                android:paddingLeft="18dp"
                android:textSize="16dp"
                android:background="@drawable/learn_more_border"
                android:layout_marginTop="16dp"/>
            <EditText
                android:layout_width="372dp"
                android:layout_height="43dp"
                android:hint="Password"
                android:gravity="top"
                android:paddingTop="12dp"
                android:paddingLeft="18dp"
                android:textSize="16dp"
                android:background="@drawable/learn_more_border"
                android:layout_marginTop="16dp"/>
            <EditText
                android:layout_width="372dp"
                android:layout_height="43dp"
                android:hint="Confirm Password"
                android:gravity="top"
                android:paddingTop="12dp"
                android:paddingLeft="18dp"
                android:textSize="16dp"
                android:background="@drawable/learn_more_border"
                android:layout_marginTop="16dp"/>
        </LinearLayout>





    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>