<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Log_in"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/linear_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <ImageView android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:layout_gravity="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sign Up for Swift Solutions!"
            android:textColor="#060047"
            android:layout_marginTop="11.75dp"
            android:layout_marginBottom="30dp"
            android:textSize="18dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/dropdown_border"
            android:layout_marginBottom="30dp">
            <Spinner
                android:id="@+id/spinnerSignUp"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:paddingLeft="12dp"
                android:entries="@array/SignUp_pos"
                />
        </LinearLayout>
        <EditText android:id="@+id/signup_email_txt"
            android:layout_width="345dp"
            android:layout_height="43dp"
            android:hint="Email"
            android:paddingLeft="18dp"
            android:textSize="16dp"
            android:background="@drawable/learn_more_border"/>
        <EditText android:id="@+id/userName_txt"
            android:layout_width="345dp"
            android:layout_height="43dp"
            android:hint="User Name"
            android:paddingLeft="18dp"
            android:textSize="16dp"
            android:background="@drawable/learn_more_border"
            android:layout_marginTop="24dp"/>
        <EditText android:id="@+id/sign_password_txt"
            android:layout_width="345dp"
            android:layout_height="43dp"
            android:hint="Password"
            android:paddingLeft="18dp"
            android:textSize="16dp"
            android:background="@drawable/email_password_border"
            android:layout_marginTop="24dp"
            />
        <EditText android:id="@+id/conf_password_txt"
            android:layout_width="345dp"
            android:layout_height="43dp"
            android:hint="Confirm Password"
            android:paddingLeft="18dp"
            android:textSize="16dp"
            android:background="@drawable/email_password_border"
            android:layout_marginTop="24dp"
            />
        <EditText android:id="@+id/number_et"
            android:layout_width="345dp"
            android:layout_height="43dp"
            android:hint="Phone Number"
            android:paddingLeft="18dp"
            android:textSize="16dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/learn_more_border"/>
        <Button android:id="@+id/sign_up_btn"
            android:layout_width="345dp"
            android:layout_height="46dp"
            android:layout_marginTop="24dp"
            android:text="Sign up"
            android:gravity="center"
            android:textSize="18dp"
            android:background="@drawable/email_password_border"
            android:textColor="#143178"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/log_in_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Already have an account? log in"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:background="@drawable/forget_create_pass_border"
            android:clickable="true"
            android:textColor="#143178"
            />
    </LinearLayout>










</androidx.constraintlayout.widget.ConstraintLayout>