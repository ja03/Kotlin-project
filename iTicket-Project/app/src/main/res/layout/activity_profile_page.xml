<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePage">
    <ImageButton android:id="@+id/pop_arrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/back_icon"
        android:backgroundTint="@color/white"/>
    <TextView android:id="@+id/pr_hd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        android:textSize="18dp"
        android:textColor="@color/black" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/pr_hd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="24dp"
        android:layout_marginLeft="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Ahmad Mahmoud"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#060047"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="ahmadmahmoud@gmail.com"
            android:textSize="24dp"
            android:textColor="#060047"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="All time progress"
            android:textSize="18dp"
            android:textColor="#060047"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">
            <TextView
                android:layout_width="107dp"
                android:layout_height="107dp"
                android:gravity="center"
                android:lineHeight="25dp"
                android:text="Opened\nTickets\n72"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:background="@drawable/progress_border"/>
            <TextView
                android:layout_width="107dp"
                android:layout_height="107dp"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:lineHeight="25dp"
                android:text="In Progress\nTickets\n50"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:background="@drawable/progress_border"/>
            <TextView
                android:layout_width="107dp"
                android:layout_height="107dp"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:lineHeight="25dp"
                android:text="Closed\nTickets\n12"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:background="@drawable/progress_border"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:baselineAligned="true"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="240dp"
                android:layout_height="28dp"
                android:text="Profile Information"
                android:textSize="18dp"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/edit_information"
                android:background="@color/white"
                android:textSize="14dp"
                android:layout_width="180dp"
                android:layout_height="28dp"
                android:text="Edit information"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <EditText
                android:layout_width="372dp"
                android:layout_height="43dp"
                android:hint="Ahmad Mahmoud"
                android:gravity="top"
                android:paddingTop="12dp"
                android:paddingLeft="18dp"
                android:textSize="16dp"
                android:background="@drawable/learn_more_border"
                android:layout_marginTop="16dp"/>
            <EditText
                android:layout_width="372dp"
                android:layout_height="43dp"
                android:hint="ahmadmahmoud@gmail.com"
                android:gravity="top"
                android:paddingTop="12dp"
                android:paddingLeft="18dp"
                android:textSize="16dp"
                android:background="@drawable/learn_more_border"
                android:layout_marginTop="16dp"/>
            <EditText
                android:layout_width="372dp"
                android:layout_height="43dp"
                android:hint="Password"
                android:gravity="top"
                android:paddingTop="12dp"
                android:paddingLeft="18dp"
                android:textSize="16dp"
                android:background="@drawable/learn_more_border"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/logout"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="0dp"
            android:text="Log Out"
            android:layout_marginTop="16dp"
            android:textSize="18dp"
            android:textColor="@color/black"/>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>