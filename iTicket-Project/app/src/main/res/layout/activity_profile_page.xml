<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePage">
    <TextView android:id="@+id/pr_hd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        android:textSize="18dp"
        android:textColor="@color/black" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/pr_hd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Ahmad Mahmoud"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#060047"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="ahmadmahmoud@gmail.com"
            android:textSize="24dp"
            android:textColor="#060047"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="All time progress"
            android:textSize="18dp"
            android:textColor="#060047"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">
            <TextView
                android:layout_width="107dp"
                android:layout_height="107dp"
                android:gravity="center"
                android:lineHeight="25dp"
                android:text="Opened\nTickets\n72"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:background="@drawable/progress_border"/>
            <TextView
                android:layout_width="107dp"
                android:layout_height="107dp"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:lineHeight="25dp"
                android:text="In Progress\nTickets\n50"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:background="@drawable/progress_border"/>
            <TextView
                android:layout_width="107dp"
                android:layout_height="107dp"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:lineHeight="25dp"
                android:text="Closed\nTickets\n12"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:background="@drawable/progress_border"/>
        </LinearLayout>
        


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>